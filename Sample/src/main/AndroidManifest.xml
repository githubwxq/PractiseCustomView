				android:name="android.support.PARENT_ACTIVITY"
				android:value="com.gcssloop.test.MainActivity" />
		</activity>
		<activity android:name="com.gcssloop.test.viewsupport.TestApiHelperActivity"
			android:parentActivityName="com.gcssloop.test.MainActivity">
			<!-- Parent activity meta-data to support 4.0 and lower -->
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="com.gcssloop.test.MainActivity" />
		</activity>
		<activity android:name="com.gcssloop.test.viewsupport.TestMorionEventHelperActivity"
			android:parentActivityName="com.gcssloop.test.MainActivity">
